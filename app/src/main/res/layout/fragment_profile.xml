<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments_view.ProfileFragment">

    <ImageView
        android:id="@+id/image_view_profilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_profile" />

    <TextView
        android:id="@+id/textView_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="User Display Name"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="@+id/image_view_profilePic"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/image_view_profilePic"
        app:layout_constraintTop_toBottomOf="@+id/image_view_profilePic" />

    <View
        android:id="@+id/view_strock_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_stroke"
        app:layout_constraintTop_toBottomOf="@+id/textView_userName"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@email.com"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_strock_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_strock_email"
        app:layout_constraintTop_toTopOf="@+id/view_strock_email" />

    <View
        android:id="@+id/view_strock_email_validation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_stroke"
        app:layout_constraintTop_toBottomOf="@+id/view_strock_email"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView_email_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email varified"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_strock_email_validation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_strock_email_validation"
        app:layout_constraintTop_toTopOf="@+id/view_strock_email_validation" />

    <View
        android:id="@+id/view_strock_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/shape_stroke"
        app:layout_constraintTop_toBottomOf="@+id/view_strock_email_validation"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone number"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_strock_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_strock_phone"
        app:layout_constraintTop_toTopOf="@+id/view_strock_phone" />



    <ImageView
        android:id="@+id/imageViewSignOutBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/view_strock_phone"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/view_strock_phone"
        app:layout_constraintTop_toBottomOf="@+id/view_strock_phone"
        app:srcCompat="@drawable/shape_small_button_stroke" />

    <Button
        android:id="@+id/buttonSingOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:background="@drawable/touch_selector"
        android:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSignOutBorder"
        app:layout_constraintStart_toStartOf="@+id/imageViewSignOutBorder"
        app:layout_constraintTop_toTopOf="@+id/imageViewSignOutBorder"
        />



</androidx.constraintlayout.widget.ConstraintLayout>